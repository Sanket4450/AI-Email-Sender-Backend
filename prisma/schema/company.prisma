model Company {
  id          String       @id @default(cuid())
  title       String       @unique
  tags        CompanyTag[]
  description String?
  location    String
  contacts    Contact[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@index([title])
  @@map("company")
}

model CompanyTag {
  companyId String
  tagId     String
  company   Company @relation(fields: [companyId], references: [id])
  tag       Tag     @relation(fields: [tagId], references: [id])

  @@id([companyId, tagId])
  @@map("company_tag")
}

model Tag {
  id        String       @id @default(cuid())
  title     String       @unique
  companies CompanyTag[]
  contacts  ContactTag[]

  @@map("tag")
}
